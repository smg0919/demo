    <!--android:background="#e5e5e5" />-->
    <RelativeLayout
        android:id="@+id/item_rl_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:minHeight="50dp"
        android:background="#ffffff" >

        <View
            android:id="@+id/item_rl_1_level"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#e5e5e5" />


        <!--<View-->
        <!--android:id="@+id/View03"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:background="#e5e5e5" />-->

        <TextView
            android:id="@+id/item_buy_record_1_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="假日票3张"
            android:textColor="#525252"
            android:textSize="@dimen/normal" />



        <TextView
            android:id="@+id/item_buy_record_1_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_right"
            android:text="2017-06-02"
            android:textColor="@color/gray"
            android:textSize="@dimen/normal_small_1"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/item_rl_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:minHeight="50dp"
        android:layout_below="@+id/item_rl_1"
        android:background="#ffffff" >

        <View
            android:id="@+id/item_rl_2_level"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#e5e5e5" />
        <TextView
            android:id="@+id/item_buy_record_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="$176"
            android:textColor="@color/red"
            android:textSize="@dimen/normal" />


        <TextView
            android:id="@+id/item_buy_record_2_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="85dp"
            android:text="$176"
            android:textColor="@color/red"
            android:textSize="@dimen/normal" />
        <TextView
            android:id="@+id/item_buy_record_2_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/item_buy_record_2_tv_1"
            android:text="(已支付)"
            android:layout_marginLeft="15dp"
            android:textColor="@color/gray"
            android:textSize="@dimen/normal_small_1" />
        <TextView
            android:id="@+id/item_buy_record_tv_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/aa"
            android:text="支付"
            android:textColor="@color/gray"
            android:background="@drawable/btn_selector"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textSize="@dimen/normal_small_1"/>
        <TextView
            android:id="@+id/aa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="    "
            android:layout_toLeftOf="@+id/item_buy_record_detail"/>

        <TextView
            android:id="@+id/item_buy_record_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_right"
            android:text="详情"
            android:textColor="@color/gray"
            android:background="@drawable/btn_selector"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textSize="@dimen/normal_small_1"/>

    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:background="#f5f5f5"
        android:layout_below="@+id/item_rl_2"></View>

</RelativeLayout>


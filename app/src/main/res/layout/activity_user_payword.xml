<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e5"
    tools:context="com.syjjkj.kxwq.ticket.BuyRecordActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <LinearLayout
            android:focusable="true" android:focusableInTouchMode="true"
            android:layout_width="0px" android:layout_height="0px"/>
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="设置密码"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/item_rl_4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:minHeight="50dp"
        android:background="#ffffff"
        android:layout_below="@+id/item_rl_3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <View
            android:id="@+id/item_rl_11_level"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#e5e5e5" />
        <TextView
            android:id="@+id/item_buy_recorddetail_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="验证码:"
            android:textColor="#525252"
            android:textSize="@dimen/normal" />
        <EditText
            android:id="@+id/et_login_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="number"
            android:textSize="@dimen/normal"
            android:hint="请输入您的验证码"
            android:singleLine="true"
            android:layout_alignBottom="@+id/item_buy_recorddetail_phone"
            android:layout_toRightOf="@+id/item_buy_recorddetail_phone"
            android:layout_toEndOf="@+id/item_buy_recorddetail_phone" />
        <Button
            android:id="@+id/btn_verification"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_login"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_rl_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:minHeight="50dp"
        android:background="#ffffff"
        android:layout_below="@+id/item_rl_10_leve2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <View
            android:id="@+id/item_rl_10_level"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#e5e5e5" />
        <TextView
            android:id="@+id/item_buy_recorddetail_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="手机号:"
            android:textColor="#525252"
            android:textSize="@dimen/normal" />
        <TextView
            android:id="@+id/item_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17612479"
            android:textColor="#525252"
            android:textSize="@dimen/normal"
            android:layout_alignBottom="@+id/item_buy_recorddetail_man"
            android:layout_toRightOf="@+id/item_buy_recorddetail_man" />

    </RelativeLayout>
    <View
        android:id="@+id/item_rl_10_leve3"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="#e5e5e5"
        android:layout_below="@+id/item_rl_4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/transaction_history"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:minHeight="50dp"
        android:background="#ffffff"
        android:layout_below="@+id/item_rl_10_leve3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <View
            android:id="@+id/item_rl_14_level"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#e5e5e5" />
        <TextView
            android:id="@+id/item_buy_recorddetail_fuzhuid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="输入新密码:"
            android:textColor="#525252"
            android:textSize="@dimen/normal" />
        <EditText
            android:id="@+id/newpaywords"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text=""
            android:textColor="#525252"
            android:textSize="@dimen/normal"
            android:inputType="textPassword"
            android:singleLine="true"
            android:background="@null"
            android:layout_toRightOf="@+id/item_buy_recorddetail_fuzhuid"
            android:layout_toEndOf="@+id/item_buy_recorddetail_fuzhuid"
            android:layout_alignBottom="@+id/item_buy_recorddetail_fuzhuid"
            android:layout_alignTop="@+id/item_buy_recorddetail_fuzhuid" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/pay_Manager"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_hight"
        android:background="#ffffff"
        android:layout_below="@+id/transaction_history"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/rl_content_5_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="确认新密码:"
            android:textColor="#525252"
            android:textSize="@dimen/normal" />
        <EditText
            android:id="@+id/subpaywords"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text=""
            android:textColor="#525252"
            android:inputType="textPassword"
            android:textSize="@dimen/normal"
            android:singleLine="true"
            android:background="@null"
            android:layout_toRightOf="@+id/rl_content_5_tv_2"
            android:layout_toEndOf="@+id/rl_content_5_tv_2"
            android:layout_alignBottom="@+id/rl_content_5_tv_2"
            android:layout_alignTop="@+id/rl_content_5_tv_2" />
    </RelativeLayout>

    <View
        android:id="@+id/item_rl_10_leve2"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="#e5e5e5"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/login_btn_log"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/btn_login"
        android:text="@string/affirm"
        android:textColor="#ffffff"
        android:layout_below="@+id/pay_Manager"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
</RelativeLayout>

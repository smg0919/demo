<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f0f0"
    tools:context="com.syjjkj.kxwq.member.FragmentMember">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="分享链接"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>



        <RelativeLayout
            android:id="@+id/rl_01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_iv_show"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="60dp"


            android:orientation="vertical" >



            <RelativeLayout
                android:id="@+id/register_rl_username"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
               >
                <View
                    android:id="@+id/View02"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="#e5e5e5" />

                <View
                    android:id="@+id/View01"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="#e5e5e5" />
                <TextView
                    android:id="@+id/register_tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="电话"
                    android:textSize="@dimen/normal_small_1"
                    android:textColor="#5e5e5e" />

                <EditText
                    android:id="@+id/register_et_username"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/register_tv_username"
                    android:background="@null"
                    android:hint="请输入用户名"
                    android:inputType="number"
                    android:textSize="@dimen/normal_small_1"
                    android:singleLine="true" >

                    <requestFocus />
                </EditText>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/register_rl_nickname"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:background="#ffffff"
                android:layout_below="@+id/register_rl_username" >
                <View

                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="#e5e5e5" />

                <View

                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="#e5e5e5" />
                <TextView
                    android:id="@+id/register_tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="昵称"
                    android:textSize="@dimen/normal_small_1"
                    android:textColor="#5e5e5e" />

                <EditText
                    android:id="@+id/register_et_nickname"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/register_tv_nickname"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/ImageView01"
                    android:background="@null"
                    android:hint="昵称"
                    android:textSize="@dimen/normal_small_1"
                    android:singleLine="true" >
                </EditText>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/register_rl_email"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:background="#ffffff"
                android:layout_below="@+id/register_rl_nickname" >
                <View

                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="#e5e5e5" />

                <View

                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="#e5e5e5" />
                <TextView
                    android:id="@+id/register_tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="邮箱"
                    android:textColor="#5e5e5e"
                    android:textSize="@dimen/normal_small_1"/>

                <EditText
                    android:id="@+id/register_et_email"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/register_tv_email"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/ImageView01"
                    android:background="@null"
                    android:hint="请输入邮箱"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/normal_small_1"
                    android:singleLine="true" >
                </EditText>
            </RelativeLayout>
        </RelativeLayout>



        <Button
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/rl_01"
            android:layout_alignRight="@+id/rl_01"
            android:layout_below="@+id/rl_01"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_login"
            android:text="注册"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/register_btn"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="22dp"
            android:text="Copyright © 2013-2017 www.carcle.cn All Rights Reserved."
            android:textSize="8dp" />




</LinearLayout>
